<h1>Cocktail : <%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <h3><%= dose.description %> <%= dose.ingredient.name %></h3><%= link_to 'Supprimer', dose_path(dose), method: :delete %>
<% end %>

<%= link_to 'Retour', cocktails_path %>
<%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail) %>
